<% layout("/layouts/boilerplate") %>
<body>
  <h3>All Listings</h3>
  <!-- <form method = "GET" action="/listings/new">
        <button>Add Listing</button>
    </form> -->
  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <%for(let listing of alllisting){%>
    <a href="/listings/<%=listing._id%>" class="listlink">
      <div class="card">
        <img
          src="<%=listing.image%>"
          class="card-img-top"
          alt=":-/"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><li><%=listing.title%></li></b>
            <li>&#8377;<%=listing.price.toLocaleString("en-IN") %> / night</li>
            <li><%=listing.location%></li>
          </p>
        </div>
      </div>
    </a>
    <%}%>
  </div>
</body>
